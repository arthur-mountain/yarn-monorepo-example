{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "outDir": "./dist/",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "core/**/*.ts",
    "core/**/*.tsx",
    "core/__tests__/**/*.test.ts",
    "core/__tests__/**/*.test.tsx",
    "vitest.*.{ts,json}"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
